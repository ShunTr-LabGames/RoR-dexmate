<div class="content-page">
<!-- Start content -->
<div class="content">
<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div class="card-box">
				<h4 class="header-title m-t-0 m-b-30">User Data</h4>
				<div class="row">
					<div class="col-lg-11">

					<%= form_tag({:action => "update"}, :method => "post", :multipart => true, :class => "form-horizontal", :id => "userForm", :autocomplete => "off") do %>
							

							<div class="form-group">
								<label class="col-md-2 control-label">Name</label>
								<div class="col-md-10">
									<input id="name" type="text" class="form-control" readonly="" value="<%= session[:name] %>">
								</div>
							</div>
							<div class="form-group">
								<label class="col-md-2 control-label" for="example-email">Email</label>
								<div class="col-md-10">
									<input id = "email" type="email" placeholder="User Email" name="email" class="form-control" value="<%= session[:mail] %>">
								</div>
							</div>
							<div class="form-group">
								<label class="col-md-2 control-label" for="example-email">Phone</label>
								<div class="col-md-10">
									<input id ="phone" type="phone" placeholder="User Phone" data-mask="+99 999 999 999" name="phone" class="form-control" value="<%= session[:phone] %>">
								</div>
							</div>
							<div class="form-group">
								<label class="col-md-2 control-label" for="example-email">Default Height</label>
								<div class="col-md-10">
									<input id="height" type="height" placeholder="Default height (m)" data-mask="9.99" name="height" class="form-control" value="<%= session[:height] %>">
								</div>
							</div>
							<div class="form-group">
								<label class="col-md-2 control-label">Password</label>
								<div class="col-md-10">
									<input id="password" name="password" type="password" placeholder="Password" class="form-control" >
								</div>
							</div>
							<div class="form-group">
								<label class="col-md-2 control-label">New Password</label>
								<div class="col-md-10">
									<input id="newpassword" name="newpassword" type="password" placeholder="New Password" class="form-control" >
								</div>
							</div>
							<div class="form-group">
								<label class="col-md-2 control-label">Confirm Pasword</label>
								<div class="col-md-10">
									<input id="repeatnewpassword" name="repeatnewpassword" type="password" placeholder="Repeat New Password" class="form-control" >
								</div>
							</div>
							<div class="form-group">
								<label class="col-md-2 control-label">User image</label>
								<div class="col-md-10">
								<%= file_field_tag "photo", :class => "dropify" %>
									
								</div>
							</div>
							<div class="form-actions">
								<div class="row">
									<div class="col-md-12">
										<button class="btn btn-default" type="submit" id="add-event" >
										Submit
										</button>
									</div>
									</div						
						
						
						<% end %>
						

						
						</div><!-- end col -->
						</div><!-- end row -->
					</div>
				</div>
				<!-- end col -->
			</div>
			<!-- end row -->
		</div>
		<!-- container -->
	</div>
	<!-- content -->
	<footer class="footer">
		2017 Dexmate.
	</footer>
</div>