<div class="content-page">
	<!-- Start content -->
	<div class="content">
		<div class="container">
			<!-- Token for new users -->
			<input type="hidden" name="authenticity_token" class="newUserToken" value="<%= form_authenticity_token %>">
			<div class="row">
				<div class="card-box">
					<h4 class="header-title m-t-0 m-b-30">Dexmate Users</h4>
					<div class="row">
						<div class="col-sm-6">
							<div class="m-b-30">
								<button id="addToTable" class="btn btn-primary waves-effect waves-light">Add <i class="fa fa-plus"></i></button>
							</div>
						</div>
					</div>
			
					<table class="table table-striped m-0" id="datatable-editable">
						<thead>
							<tr>
								<th>idUser</th>
								<th>Name</th>
								<th>Email</th>
								<th>Admin</th>
								<th>Phone</th>
								<th>Password</th>
								<th></th>
							</tr>
						</thead>
						<tbody>

							<% @users.each do |u| %>
							
								<tr class="gradeX" data-user="user">
									<input type="hidden" name="authenticity_token" class="authToken" value="<%= form_authenticity_token %>">
									<td><%= u.idUser %></td>
									<td><%= u.name %></td>
									<td><%= u.mail %></td>
									<td><%= u.admin %></td>
									<td><%= u.phone %></td>
									<td><%= u.password_digest %></td>
									<td class="actions">
										<a href="#" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
										<a href="#" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
										<a href="#" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
										<a href="#" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
			<!-- end col -->
		</div>
		<!-- End row -->
	</div>
	<!-- container -->
</div>
<!-- content -->
<footer class="footer">
	2017 Â© Dexmate.
</footer>

<!-- MODAL -->
<div id="dialog" class="modal-block mfp-hide">
	<section class="panel panel-info panel-color">
		<header class="panel-heading">
			<h2 class="panel-title">Are you sure?</h2>
		</header>
		<div class="panel-body">
			<div class="modal-wrapper">
				<div class="modal-text">
					<p>Are you sure that you want to delete this user?</p>
				</div>
			</div>

			<div class="row m-t-20">
				<div class="col-md-12 text-right">
					<button id="dialogConfirm" class="btn btn-primary waves-effect waves-light">Confirm</button>
					<button id="dialogCancel" class="btn btn-default waves-effect">Cancel</button>
				</div>
			</div>
		</div>

	</section>
</div>
<!-- end Modal -->
</div>